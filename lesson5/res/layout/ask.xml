<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:gravity="center">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="left|center_vertical">
        <EditText
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/editText" android:layout_weight="80" android:hint="where from?"
                android:text="http://bash.im/rss/"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/button" android:layout_weight="20" android:text="OK"/>
    </LinearLayout>
</LinearLayout>